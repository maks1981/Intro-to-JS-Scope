// Intro to JS Scope
// Scope is the context that code is executed in

function doMath(){
	var x = 40;
	console.log(x);
}
// doMath();// 40

var y = 55;
function doMath(){
	console.log(y);
}
//55


//  Example outsida and inside function scope
var word = "Hello there!"

function saySomething(){
	var word = "See you!";
	console.log(word);
}
// saySomething()//See you!
// word//"Hello there!"

// Scope explanation example;
function hey(){
	var name = "Maks";
	console.log(name);
}
//hey() will Maks
function bye(){
	console.log(name);
}
//bye() will 
undefined

